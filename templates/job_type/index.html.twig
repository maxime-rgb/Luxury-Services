{% extends 'base.html.twig' %}

{% block title %}JobType index{% endblock %}

{% block body %}
<h1 style="padding-bottom:2rem; padding-top:10rem; background-color: #2F3138;text-align: center; color:white;margin-top:0">Job Types</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_type in job_types %}
            <tr>
                <td>{{ job_type.id }}</td>
                <td>{{ job_type.type }}</td>
                <td>
                    <a style="width:7rem;height:3rem;font-size:0.8em;padding:initial;" href="{{ path('job_type_show', {'id': job_type.id}) }}"class="btn gradient grey lighten-2 black waves-effect waves-light btn-register">show</a>
                    
                    <a style="width:7rem;height:3rem;font-size:0.8em;padding:initial;"href="{{ path('job_type_edit', {'id': job_type.id}) }}"class="btn gradient secondary  waves-effect waves-light btn-register">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_type_new') }}">Create new</a>
{% endblock %}
