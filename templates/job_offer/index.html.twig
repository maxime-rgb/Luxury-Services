{% extends 'base.html.twig' %}

{% block title %}JobOffer index{% endblock %}

{% block body %}
    {# <h1>JobOffer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Note</th>
                <th>Title</th>
                <th>Location</th>
                <th>Closing_date</th>
                <th>Salary</th>
                <th>Creation_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_offer in job_offers %}
            <tr>
                <td>{{ job_offer.id }}</td>
                <td>{{ job_offer.description }}</td>
                <td>{{ job_offer.note }}</td>
                <td>{{ job_offer.title }}</td>
                <td>{{ job_offer.location }}</td>
                <td>{{ job_offer.closingDate ? job_offer.closingDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job_offer.salary }}</td>
                <td>{{ job_offer.creationDate ? job_offer.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('job_offer_show', {'id': job_offer.id}) }}">show</a>
                    <a href="{{ path('job_offer_edit', {'id': job_offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_offer_new') }}">Create new</a> #}


<div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Our job offers
                        {% if is_granted('ROLE_ADMIN') %} 
                        ADMIN
                        {% endif %}
                        </h2>
                        <span class="white-text">Search and filter by job category</span>
                        
                    </div>
                </div>
            </div>
        </section>

        {% if is_granted('ROLE_ADMIN') %} 

         <a class="btn bn-lg gradient grey lighten-2 black  btn-block waves-effect waves-light btn-register" href="{{ path('job_offer_new') }}"style="margin:0;">Create new Job offer</a>
         
         <a target="_self" href="{{ path ('admin_index')}}"class="btn bn-lg gradient secondary black btn-block waves-effect waves-light btn-register"style="margin:0;">
        <span>Return to admin page</span></a>

        {% endif %}


        <!-- Page Content-->
        <section id="job-offers" class="section-padding gray-bg">
            <div class="container">
                <div class="text-center mb-40">
                    <h2 class="section-title">We have the perfect job for you</h2>
                    <p class="section-sub">just like our candidates, we offer quality, serious & reliable job offers.</p>
                </div>
                <div class="portfolio-container">

                    <ul class="portfolio-filter brand-filter text-center">
                        <li class="active waves-effect waves-light" data-group="all">All</li>
                        {% for category in categories %}
                            <li class=" waves-effect waves-light" data-group="{{category.category}}">{{category.category}}</li>
                        {% endfor %}
                    </ul>

                    <div class="portfolio portfolio-with-title col-2 gutter mt-30">
                    
                    {% for oneOfAllOffer in job_offers %}

                            <div class="portfolio-item" data-groups='["all", "{{oneOfAllOffer.jobCategory}}"]'>
                                <div class="portfolio-wrapper">
                                    <div class="card job-card">
                                        <div class="card-content">
                                            <span class="title">
                                                <span class="card-title">{{ oneOfAllOffer.title }}</span>
                                                <span class="ref grey-text">{{ oneOfAllOffer.id }}</span>
                                            </span>
                                            <div class="metas mb-20">
                                                <div class="meta">
                                                    <i class="material-icons">&#xE53E;</i>{{ oneOfAllOffer.salary }}&euro;
                                                </div>
                                                <div class="meta">
                                                    <i class="material-icons">&#xE916;</i>{{ oneOfAllOffer.closingDate|date('d/m/Y') }}
                                                </div>
                                                <div class="meta">
                                                    <i class="material-icons">&#xE55F;</i>{{ oneOfAllOffer.location }}
                                                </div>
                                            </div>
                                            <p class="truncate-text">{{ oneOfAllOffer.description }}</p>
                                        </div>
                                        <div class="card-action">
                                            <a class="btn btn-md primary border waves-effect waves-dark" href="{{ path('job_offer_show', {'id': oneOfAllOffer.id}) }}">Details</a>

                                            <a class="btn btn-md primary waves-effect waves-light" href="">Apply</a>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        {% endfor %}
            </div>
        </section>

        <section class="cta-candidate bg-fixed bg-cover overlay dark-5 padding-top-70 padding-bottom-50">
            <div class="container">
                <div class="row">
                    <div class="valign-wrapper text-center">
                        <div class="hero-intro valign-cell">
                            <h2 class="tt-headline clip is-full-width no-margin">
                                <span>You are </span>
                                <span class="tt-words-wrapper">
                                    <b class="is-visible">Commercial</b>
                                    <b>Creative</b>
                                    <b>Marketing & PR</b>
                                    <b>Technology</b>
                                    <b>Fashion & luxury</b>
                                    <b>Retail sales</b>
                                </span>
                            </h2>
                            <h3 class="c-secondary mb-30 no-margin">Sign-up and apply for jobs now</h3>
                            <p class="white-text section-sub">Each one of your skills is seen as precious resource to us, each one of your personality traits are considered as an added on value. Joining us is allowing our recruitment expertise and personal guidance to bring the best out in you by choosing the most suited position.</p>

                            <a href="/register.html" class="btn border secondary waves-effect waves-light mt-40">Join us</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>

</div>
{% endblock %}
